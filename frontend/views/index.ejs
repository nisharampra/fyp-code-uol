<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Select Ticker</title>
    <!-- Milligram CSS CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.4.1/milligram.min.css"
    />
        <!-- css -->

    <style>
      body {
        background-color: #f9f9f9;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        color: #333;
        padding: 1rem;
      }

      .container {
        background: #fff;
        padding: 2rem;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 400px;
      }

      .nav {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 1.5rem;
      }

      .nav a {
        margin-left: 10px;
        text-decoration: none;
        color: #1e90ff;
      }

      .nav a:hover {
        text-decoration: underline;
      }

      h3 {
        margin-bottom: 1rem;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      button.button-primary {
        margin-top: 0.5rem;
      }

      select:invalid {
        color: #aaa;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <!-- Navigation -->
      <div class="nav">
        <div>
          Logged in as <strong style="color: #1e90ff;"><%= currentUser.username %></strong>
        </div>
        <div>
          <a href="/profile">Profile</a>
          <a href="/change-password">Change Password</a>
          <a href="/logout" style="color: #dc2626;">Logout</a>
        </div>
      </div>

      <!-- Header -->
      <h3>Choose a Ticker to Practice</h3>

      <!-- Form -->
      <form action="/start" method="POST">
        <label for="ticker">Select Ticker:</label>
        <select id="ticker" name="ticker" required>
          <option value="" disabled selected>-- Select Ticker --</option>
          <% tickers.forEach(function(t) { %>
            <option value="<%= t %>"><%= t %></option>
          <% }); %>
        </select>

        <button type="submit" class="button-primary">Start Practice</button>
      </form>
    </div>
  </body>
</html>
